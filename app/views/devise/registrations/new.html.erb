
<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :class => 'form-signin', :role => 'form' }) do |f| %>

    <h3 class="form-signin-heading">Sign Up</h3>
    <%= devise_error_messages! %>

    <%= f.text_field :name, :autofocus => true, :class => 'form-control', :placeholder => 'Enter Name', :required => true %>
    <%= f.email_field :email, :class => 'form-control', :placeholder => 'Enter Email', :required => true %>
    <%= f.password_field :password, :class => 'form-control', :placeholder => 'Enter Password' %>
    <%= f.password_field :password_confirmation, :class => 'form-control', :placeholder => 'Enter Password Again' %>

    <button class="btn btn-lg btn-primary btn-block" type="submit">Sign Un</button>
    <br/>
    <%= render "devise/shared/links" %>
<% end %>

