<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :class => 'form-signin', :role => 'form' }) do |f| %>
    <h3 class="form-signin-heading">Please Sign In</h3>
    <%= f.email_field :email, :autofocus => true, :class => 'form-control', :placeholder => 'john.doe@gmail.com', :required => true %>
    <%= f.password_field :password, :class => 'form-control', :placeholder => '123456' %>

    <% if devise_mapping.rememberable? -%>
        <label class="checkbox">
          <%= f.check_box :remember_me %> Remember Me
        </label>
    <% end -%>

    <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
<br/>
    <%= render 'devise/shared/links' %>

<% end %>

